<h1>Chat room</h1>
<hr>

<%= form_with(model: @chat, url: chats_path, method: :post) do |form| %>
  <div class="form-group">
    <%= form.text_field :username, class: 'form-control', placeholder:  'Username' %>
  </div>
  <div class="form-group">
    <%= form.text_area :text, class: 'form-control', placeholder: 'Text' %>
  </div>
  <%= form.submit 'Send chat', class: 'btn btn-primary px-4' %>
<% end %>

<hr>

<div id="chats">
  <%= render 'chats', chats: @chats %>
</div>
